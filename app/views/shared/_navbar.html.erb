  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <span class="nav-item active">
           <p>Bienvenue <%= current_user.email %></p>
        </span>
      
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/dsmxleyf5/image/upload/v1606229210/qenaiz0yjkczpsl8fcvw.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%= link_to "Louer votre Maison", new_hauntedhouse_path, class: "dropdown-item" %>
            <%= link_to "Mes réservations", journeys_path, class: "dropdown-item" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

            
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

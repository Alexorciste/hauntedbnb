
<%= render "/shared/banner" %>

<div class = "container">
    <div class="cards">
      <% @hauntedhouses.each do |hauntedhouse| %>
          <% if hauntedhouse.photo.attached? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path hauntedhouse.photo.key, height: 300, width: 400, crop: :fill %>')">
              <div>
                 <p><%= link_to hauntedhouse.name, hauntedhouse_path(hauntedhouse) %></p>
              </div>
              <div class = "tag">
                  <% if hauntedhouse.visited? %>
                    <p>visitée</p>
                  <% end %>
                  <% if hauntedhouse.reserved? %>
                    <p>reservée</p>
                  <% end %>
                  <% if hauntedhouse.running? %>
                    <p>Bon séjour!!</p>
                  <% end %>
              </div>
            </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.businessnhmagazine.com/UploadedFiles/Articles/8151/66581491_m.jpg')">
            <div class ="card-content">
              <p><%= link_to hauntedhouse.name, hauntedhouse_path(hauntedhouse) %></p>
              </div>
              <div>
              <% if hauntedhouse.visited? %>
                <p>visitée</p>
              <% end %>
              <% if hauntedhouse.reserved? %>
                <p>reservée</p>
              <% end %>
              <% if hauntedhouse.running? %>
                <p>Bon séjour!!</p>
              <% end %>
            </div>
           </div>
        <% end %>
      <% end %>
</div>

